@using myShop.Entities.Models;
@{
	ViewBag.Title = "Category Management";
	ViewBag.CardTitle = "View Categories";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
	<!-- Corrected layout path -->
}
@model IEnumerable<Category>
<div>
<a href="/Category/Create" class="btn btn-primary">Create</a>
</div>
<hr />
<table class="table-hover" width="100%">
	<tr>
		<td>Name</td>
		<td>Description</td>
		<td>Date Created</td>
		<td>Actions</td>
	</tr>
	@foreach(var item in Model)
	{
		<tr>
			<td>@item.Name</td>
			<td>@item.Description</td>
			<td>@item.CreatedTime</td>
			<td>
				<a href="/Category/Edit/@item.Id" class="btn btn-success">Edit</a>
				<a href="/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>

			</td>
		</tr>
	}
</table>